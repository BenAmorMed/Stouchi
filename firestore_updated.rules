rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // User profiles
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow create, delete: if isAdmin();
      allow update: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }

    // Fixed Expenses (ADD THIS BLOCK)
    match /fixed_expenses/{expenseId} {
      allow read, write: if isAdmin();
    }

    // Menu: Categories & Articles
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /articles/{articleId} {
      allow read: if true;
      allow create, delete: if isAdmin();
      allow update: if isAuthenticated();
    }

    // Orders
    match /orders/{orderId} {
      allow create: if true;
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        isAdmin()
      );
      allow update: if isAuthenticated() && (
        (resource.data.userId == request.auth.uid && resource.data.status == 'pending') || 
        isAdmin()
      );
      allow delete: if isAuthenticated() && (
        (resource.data.userId == request.auth.uid && resource.data.status == 'pending') || 
        isAdmin()
      );
    }

    // Daily Statistics
    match /daily_statistics/{statsId} {
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow write: if isAuthenticated() && (request.resource.data.userId == request.auth.uid || isAdmin());
    }

    // History Archives
    match /history_archives/{archiveId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Shifts
    match /shifts/{shiftId} {
      allow create: if isAuthenticated();
      allow read: if true;
      allow update: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // Stock Products (Inventory)
    match /stock_products/{productId} {
      allow read: if true;
      allow create, delete: if isAdmin();
      allow update: if isAuthenticated();
    }

    // Time Tracking & Schedules
    match /time_entries/{entryId} {
      allow read, write: if true;
    }
    match /work_schedules/{scheduleId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Tables
    match /tables/{tableId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
  }
}
