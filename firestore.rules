rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin
    // We check the role in the user's document
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // User profiles
    match /users/{userId} {
      // Allow user to read their own profile, or admin to read any
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      
      // Admin can create/delete any user
      allow create, delete: if isAdmin();
      
      // Allow users to update their own profile or admin to update any
      allow update: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }

    // Menu: Categories & Articles
    // Everyone authenticated can read the menu
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /articles/{articleId} {
      allow read: if true;
      allow create, delete: if isAdmin();
      allow update: if isAuthenticated();
    }

    // Orders
    match /orders/{orderId} {
      allow create: if true;
      // Users can only see their own orders, admins can see all orders
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        isAdmin()
      );
      // Users can update their own pending orders, admins can update any
      allow update: if isAuthenticated() && (
        (resource.data.userId == request.auth.uid && resource.data.status == 'pending') || 
        isAdmin()
      );
      // Only admins can delete orders
      allow delete: if isAdmin();
    }

    // Daily Statistics
    match /daily_statistics/{statsId} {
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow write: if isAuthenticated() && (request.resource.data.userId == request.auth.uid || isAdmin());
    }

    // History Archives
    match /history_archives/{archiveId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Shifts
    match /shifts/{shiftId} {
      allow create: if isAuthenticated();
      allow read: if true; // Relaxed for initial load
      allow update: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // Stock Products (Inventory)
    match /stock_products/{productId} {
      allow read: if true; // Same as articles/categories
      allow create, delete: if isAdmin();
      allow update: if isAuthenticated();
    }

    // Time Tracking & Schedules
    match /time_entries/{entryId} {
      allow read, write: if true;
    }
    match /work_schedules/{scheduleId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Tables
    match /tables/{tableId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
  }
}
